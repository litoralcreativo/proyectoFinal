<div class="container">
    <div class="row">
        {{#each categorias}}
        <div class="col-4 mt-4">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h4 class="card-title">{{nombreCategoria}}</h4>
                    <hr>
                    <a href="/admin/ingredientes/cat{{id}}" class="btn btn-custom-light"><i class="fas fa-eye"></i> Ver mas</a> 
                    <button type="button" class="btn btn-danger" onclick="addLabel('{{nombreCategoria}}', {{id}})" data-bs-toggle="modal" data-bs-target="#confirmationModal" data-bs-toggle="tooltip" data-bs-placement="top" title="borrar">
                      <i class="fas fa-trash-alt"></i>
                    </button>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    <hr>
    <div class="row">
        <div class="container-fluid d-flex justify-content-center align-items-center mt-4">
            <div class="row ">
                <div class="col p-3 bg-light custom-form d-flex flex-column">
                    <a href="/admin/ingredientes/create" class="btn btn-custom-light m-2">Nuevo ingrediente</a>
                    <a href="/admin/ingredientes/create-cat" class="btn btn-custom-light m-2">Nuevo Categoria</a>
                    <a href="/admin/ingredientes/create-part" class="btn btn-custom-light m-2 disabled" disabled>Nueva Parte</a>
                    <a href="/admin/ingredientes/create-state" class="btn btn-custom-light m-2 disabled" disabled>Nuevo Estado</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Desea eliminar esta categoria?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
        <a class="btn btn-danger" id="modalDeleteBtn" href="#"><i class="fas fa-trash-alt"></i> Eliminar</a>
      </div>
    </div>
  </div>
</div>
<script>
  const addLabel = (title, id) =>
  {
    modalLabel.innerText = title;
    modalDeleteBtn.href = `/admin/ingredientes/delete-cat/${id}`
  }
</script>