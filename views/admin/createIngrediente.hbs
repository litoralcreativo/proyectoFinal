<div class="container-fluid d-flex justify-content-center align-items-center bg-light" style="height: 100vh;">
    <div class="row">
        <div class="col p-3 bg-light custom-form">
            <form method="post" action="/admin/ingredientes/create" enctype="multipart/form-data">
                <label for="nombre" class="form-label">Nombre del ingrediente <span class="text-danger">*</span></label>
                <div class="input-group input-group-lg mb-3">
                    <input type="text" class="form-control" aria-describedby="inputGroup-sizing-lg" placeholder="Ingrese el nombre del ingrediente" name="nombre" >
                </div>
                <label for="id_categoria" class="form-label">Categoria <span class="text-danger">*</span></label>
                <select class="form-select mb-2" name="id_categoria">
                    {{#each categorias}}
                        <option value={{id}}>{{nombreCategoria}}</option>
                    {{/each}}
                </select>
                <div class="row">
                    <div class="col">
                        <div class="input-group mb-1">
                            <label for="id_parte" class="input-group-text">Parte</label>
                            <select class="form-select" name="id_parte">
                                {{#each partes}}
                                    <option value={{id}}>{{nombreParte}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col">
                        <div class="input-group mb-3">
                            <select class="form-select" name="id_estado">
                            {{#each estados}}
                                <option value={{id}}>{{nombreEstado}}</option>
                            {{/each}}
                            </select>
                            <label for="id_estado" class="input-group-text">Estado</label>
                        </div>
                    </div>
                </div>
                
                
                 
                <hr>
                <label for="calorias" class="form-label">Informacion nutricional</label>
                <div class="input-group mb-2">
                    <input type="number" class="form-control" name="calorias" placeholder="Ingrese calorias">
                    <span class="input-group-text">kCal / 100g</span>
                </div>
                <div class="input-group mb-2">
                    <input type="number" min="0" step="0.1" class="form-control" name="carbs" placeholder="Ingrese carbohidratos">
                    <span class="input-group-text">Carbs / 100g</span>
                </div>
                <div class="input-group mb-2">
                    <input type="number" min="0" step="0.1" class="form-control" name="fats" placeholder="Ingrese grasas totales">
                    <span class="input-group-text">Fats / 100g</span>
                </div>
                <div class="input-group mb-2">
                    <input type="number" min="0" step="0.1" class="form-control" name="proteins" placeholder="Ingrese proteinas">
                    <span class="input-group-text">Proteins / 100g</span>
                </div>
                <hr>
                <div class="form-group">
                    <label for="imagen" class="form-label">Imagen <span class="text-danger">*</span></label>
                    <div class="input-group input-group mb-1">
                        <input type="file" class="form-control" aria-describedby="inputGroup-sizing-lg" name="imagen" >
                    </div>
                </div>
                <hr>
                <p class="text-danger">{{message}}</p>
                <button type="submit" class="btn btn-custom-light">Crear ingrediente</button>
            </form>
        </div>
    </div>
</div>